import java.util.Scanner;
public class Main {
     public static void main(String[] arg) 
	 {
	   int x, y ;
	   Scanner sc = new Scanner(System.in);	
	   System.out.print("enter first number: ");
	   x = sc.nextInt(); 
	   System.out.print("enter second number: ");
	   y = sc.nextInt(); 
      while(y != 0){
         x++;
         y--;
        }
        System.out.print("Sum = "+x); 
	  	
	}	
}
